<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/chart_layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left" >

            <TextView
                android:id="@+id/chart_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dip"
                android:text="一区"
                android:textSize="@dimen/content_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center|right"
            android:orientation="horizontal" >

            <TextView
                android:gravity="center|right"
                android:id="@+id/chart_count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dip"
                android:layout_weight="1"
                android:text="20"
                android:textSize="@dimen/content_size" />

            <TextView
                android:id="@+id/chart_color"
                android:layout_width="@dimen/fifteen_dip"
                android:layout_height="@dimen/fifteen_dip"
                android:layout_margin="@dimen/five_dip"
                android:background="@color/vordiplom_1" />

            <TextView
                android:gravity="center|right"
                android:id="@+id/percentage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dip"
                android:layout_weight="1"
                android:text="20%"
                android:textSize="@dimen/content_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/SmartCity/android%20baidu%20SDK%203.0.3/Grid_Management_as/app/src/main/res/layout/chartinglist_adapter.xml -->