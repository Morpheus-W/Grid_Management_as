    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/five_dip"
            android:layout_marginLeft="@dimen/ten_dip"
            android:layout_marginTop="@dimen/five_dip"
            android:text="提示声"
            android:textSize="@dimen/content_size" />

        <com.cn7782.management.view.ToggleButton
            android:id="@+id/msg_toggle_sound"
            android:layout_width="55dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/fifteen_dip" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/five_dip"
            android:layout_marginLeft="@dimen/ten_dip"
            android:layout_marginTop="@dimen/five_dip"
            android:text="震动"
            android:textSize="@dimen/content_size" />

        <com.cn7782.management.view.ToggleButton
            android:id="@+id/msg_toggle_vibrator"
            android:layout_width="55dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/fifteen_dip" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/line_color" />

