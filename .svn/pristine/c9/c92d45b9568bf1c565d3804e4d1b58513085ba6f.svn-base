<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/title_color" >

        <TextView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/five_dip"
            android:background="@drawable/btn_back"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_size" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="@dimen/fifteen_dip"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/fifteen_dip"
            android:layout_marginLeft="@dimen/ten_dip"
            android:layout_marginTop="@dimen/fifteen_dip"
            android:text="旧密码"
            android:textSize="@dimen/title_size" />

        <EditText
            android:id="@+id/old_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/fifteen_dip"
            android:layout_marginLeft="@dimen/fifteen_dip"
            android:layout_marginRight="@dimen/five_dip"
            android:layout_marginTop="@dimen/fifteen_dip"
            android:layout_toRightOf="@+id/image1"
            android:background="@null"
            android:hint="请输入"
            android:password="true"
            android:textSize="@dimen/title_size" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/fifteen_dip"
            android:layout_marginLeft="@dimen/ten_dip"
            android:layout_marginTop="@dimen/fifteen_dip"
            android:text="新密码"
            android:textSize="@dimen/title_size" />

        <EditText
            android:id="@+id/new_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/fifteen_dip"
            android:layout_marginLeft="@dimen/fifteen_dip"
            android:layout_marginRight="@dimen/five_dip"
            android:layout_marginTop="@dimen/fifteen_dip"
            android:layout_toRightOf="@+id/image2"
            android:background="@null"
            android:hint="请输入"
            android:password="true"
            android:textSize="@dimen/title_size" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/fifteen_dip"
            android:layout_marginLeft="@dimen/ten_dip"
            android:layout_marginTop="@dimen/fifteen_dip"
            android:text="确认密码"
            android:textSize="@dimen/title_size" />

        <EditText
            android:id="@+id/again_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/fifteen_dip"
            android:layout_marginLeft="@dimen/fifteen_dip"
            android:layout_marginRight="@dimen/five_dip"
            android:layout_marginTop="@dimen/fifteen_dip"
            android:layout_toRightOf="@+id/image3"
            android:background="@null"
            android:hint="请输入"
            android:password="true"
            android:textSize="@dimen/title_size" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <Button
            android:id="@+id/sumbit_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/fifteen_dip"
            android:background="@color/title_color"
            android:text="提   交"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>