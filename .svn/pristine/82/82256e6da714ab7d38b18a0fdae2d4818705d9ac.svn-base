<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/working_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/ten_dip"
            android:text="线路案件>交通事故"
            android:textColor="@color/content_text"
            android:textSize="@dimen/content_size" />
<!-- 
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/state_safe" />
         -->
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/work_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dip"
        android:background="@drawable/one"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_marginLeft="@dimen/detail_left"
            android:id="@+id/text1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/one_1"
            android:gravity="center_vertical"
            android:text="报送"
            android:textColor="#a7a7a7"
            android:textSize="@dimen/content_size" />

        <TextView
            android:layout_marginLeft="@dimen/detail_left"
            android:id="@+id/text2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/two_2"
            android:gravity="center_vertical"
            android:text="处置"
            android:textColor="#a7a7a7"
            android:textSize="@dimen/content_size" />

        <TextView
            android:layout_marginLeft="@dimen/detail_left"
            android:id="@+id/text3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/three_3"
            android:gravity="center_vertical"
            android:text="督办"
            android:textColor="#a7a7a7"
            android:textSize="@dimen/content_size" />

        <TextView
            android:layout_marginLeft="@dimen/detail_left"
            android:id="@+id/text4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/four_4"
            android:gravity="center_vertical"
            android:text="销案"
            android:textColor="#a7a7a7"
            android:textSize="@dimen/content_size" />

        <TextView
            android:layout_marginLeft="@dimen/detail_left"
            android:id="@+id/text5"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/five_5"
            android:gravity="center_vertical"
            android:text="核查"
            android:textColor="#a7a7a7"
            android:textSize="@dimen/content_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/working_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dip"
        android:lineSpacingMultiplier="1.3"
        android:maxLines="55"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:text=" "
        android:textColor="@color/content_text"
        android:textSize="@dimen/content_size" />

    <TextView
        android:id="@+id/working_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten_dip"
        android:drawableLeft="@drawable/time2"
        android:gravity="center"
        android:text="2015-01-27 09:37"
        android:textColor="@color/working"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/working_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ten_dip"
        android:layout_marginLeft="@dimen/ten_dip"
        android:drawableLeft="@drawable/position"
        android:gravity="center"
        android:text="广东省广州市天河区13号"
        android:textColor="@color/working"
        android:textSize="@dimen/small_text_size" />

</LinearLayout><!-- From: file:/E:/SmartCity/android%20baidu%20SDK%203.0.3/Grid_Management_as/app/src/main/res/layout/working_adapter.xml -->