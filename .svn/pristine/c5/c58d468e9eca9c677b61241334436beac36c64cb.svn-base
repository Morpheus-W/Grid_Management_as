<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/top_line"
            android:layout_width="1dip"
            android:layout_height="@dimen/twenty_dip"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@color/line_color" />

        <ImageView
            android:id="@+id/histort_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_line"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="top"
            android:src="@drawable/history_point" />

        <TextView
            android:id="@+id/bottom_line"
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_below="@+id/histort_point"
            android:layout_centerHorizontal="true"
            android:background="@color/line_color" />
    </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/history_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/content_size" />

            <TextView
                android:id="@+id/history_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/time2"
                android:gravity="center"
                android:textColor="@color/working"
                android:textSize="@dimen/small_text_size" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/history_duration"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/timeconsuming"
                    android:gravity="center|left"
                    android:textColor="@color/working"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/history_distance"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/distance"
                    android:gravity="center|left"
                    android:textColor="@color/working"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/position" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/history_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/working"
                        android:textSize="@dimen/small_text_size" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/line_color" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/five_dip"
            android:src="@drawable/right" />
    </LinearLayout>

</LinearLayout>