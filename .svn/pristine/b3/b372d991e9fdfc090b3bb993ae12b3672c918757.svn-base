<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dip"
        
        android:gravity="top|center" >

        <ImageView
            android:id="@+id/comment_image"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="@dimen/ten_dip"
            android:src="@drawable/default_header" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten_dip"
        android:layout_marginRight="@dimen/fifteen_dip"
        android:layout_marginBottom="@dimen/ten_dip"
        android:layout_weight="1"
        android:orientation="vertical" >

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:gravity="bottom"
                android:text="Masiro"
                android:textColor="@color/content_title"
                android:textSize="@dimen/content_size" />

            <TextView
                android:id="@+id/contact_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five_dip"
                android:layout_marginTop="@dimen/ten_dip"
                android:gravity="bottom"
                android:text="后勤部"
                android:textColor="@color/mark_text"
                android:textSize="@dimen/mark_size" />

    </LinearLayout>

</LinearLayout><!-- From: file:/E:/SmartCity/android%20baidu%20SDK%203.0.3/Grid_Management_as/app/src/main/res/layout/shortcontact_listview.xml -->