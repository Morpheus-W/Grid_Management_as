<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/fragment_more_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:background="@drawable/information_bg"
        android:gravity="center|left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fifteen_dip"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/point_head"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_margin="@dimen/five_dip"
                android:gravity="center"
                android:src="@drawable/default_header" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=" "
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_size" />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=" "
                    android:textColor="@color/white"
                    android:textSize="@dimen/content_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dip"
                android:background="#c8c7cc" />

            <LinearLayout
                android:id="@+id/personal_info_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:background="#eeeef3"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/forty"
                            android:text="账户"
                            android:textColor="@color/mark_text"
                            android:textSize="@dimen/login_button_size" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0.1dip"
                            android:layout_alignParentBottom="true"
                            android:background="#c8c7cc" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/personal_data_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/forty"
                            android:text="个人资料"
                            android:textSize="@dimen/content_size" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/right" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0.1dip"
                            android:layout_alignParentBottom="true"
                            android:background="#c8c7cc" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/modify_password_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/forty"
                            android:text="修改密码"
                            android:textSize="@dimen/content_size" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/right" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0.1dip"
                            android:layout_alignParentBottom="true"
                            android:background="#c8c7cc" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/exit_login_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/forty"
                            android:text="退出"
                            android:textColor="@color/red_text"
                            android:textSize="@dimen/content_size" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/right" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/parent_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dip"
                    android:background="#c8c7cc" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:background="#eeeef3"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/forty"
                            android:text="设置"
                            android:textColor="@color/mark_text"
                            android:textSize="@dimen/login_button_size" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0.1dip"
                            android:layout_alignParentBottom="true"
                            android:background="#c8c7cc" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/message_center_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/forty"
                            android:text="消息提醒"
                            android:textSize="@dimen/content_size" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/right" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0.1dip"
                            android:layout_alignParentBottom="true"
                            android:background="#c8c7cc" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shake_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/forty"
                            android:text="摇一摇求助"
                            android:textSize="@dimen/content_size" />

                        <com.cn7782.management.view.ToggleButton
                            android:id="@+id/shake_toggle"
                            android:layout_width="50dip"
                            android:layout_height="30dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/five_dip" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0.1dip"
                            android:layout_alignParentBottom="true"
                            android:background="#c8c7cc" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/falldown_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/forty"
                            android:text="摔落报警"
                            android:textSize="@dimen/content_size" />

                        <com.cn7782.management.view.ToggleButton
                            android:id="@+id/falldown_toggle"
                            android:layout_width="50dip"
                            android:layout_height="30dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/five_dip" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dip"
                        android:background="#c8c7cc" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="35dip"
                        android:background="#eeeef3"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/forty"
                                android:text="其他"
                                android:textColor="@color/mark_text"
                                android:textSize="@dimen/login_button_size" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="0.1dip"
                                android:layout_alignParentBottom="true"
                                android:background="#c8c7cc" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/about_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/forty"
                                android:text="关于我们"
                                android:textSize="@dimen/content_size" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="0.1dip"
                                android:layout_alignParentBottom="true"
                                android:background="#c8c7cc" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/version_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/package_name"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/forty"
                                android:text="检查更新"
                                android:textSize="@dimen/content_size" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="0.1dip"
                                android:layout_alignParentBottom="true"
                                android:background="#c8c7cc" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Feedback_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/forty"
                                android:text="意见反馈"
                                android:textSize="@dimen/content_size" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dip"
                    android:background="#c8c7cc" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

