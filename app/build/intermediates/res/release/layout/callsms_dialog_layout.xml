<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="8dip"
    android:layout_alignParentBottom="true"
    android:background="#ffffff"
    android:orientation="vertical" >
	
    <RelativeLayout
        android:background="#F7F7F7"
        android:layout_width="fill_parent"
	    android:layout_height="50dip">
	    <TextView
	        android:id="@+id/callsms_title"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:gravity="center"
	        android:text="SAMSUNG"
	        android:textStyle="bold"
	        android:textColor="#cc000000"
	        android:textSize="16sp" />
    </RelativeLayout>
	    <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#80000000" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:orientation="horizontal" >
	    <RelativeLayout
	        android:layout_weight="1"
	        android:layout_width="0dip"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:orientation="horizontal">
				<ImageView
				    android:id="@+id/callimage"
				    android:layout_gravity="center"
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:src="@drawable/phone" />
		        <TextView
		            android:id="@+id/call_phone"
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:text="打电话"
		            android:gravity="center"
		            android:textColor="#cc000000"
		            android:textSize="16sp" />
	        </LinearLayout>
		</RelativeLayout>
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#80000000" />
        <RelativeLayout
            android:layout_weight="1"
	        android:layout_width="0dip"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:orientation="horizontal">
				<ImageView
				    android:id="@+id/smsiamge"
				    android:layout_gravity="center"
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:src="@drawable/sms" />
		        <TextView
		             android:id="@+id/send_sms"
		            android:layout_toRightOf="@id/smsiamge"
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:gravity="center"
		            android:text="发短信"
		            android:textColor="#cc000000"
		            android:textSize="16sp" />
		     </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#80000000" />
	<RelativeLayout
        android:background="#F7F7F7"
        android:layout_width="fill_parent"
	    android:layout_height="50dip">
	    <TextView
	        android:id="@+id/callsms_cancel"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:gravity="center"
	        android:text="取消"
	        android:textStyle="bold"
	        android:textColor="#cc000000"
	        android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout><!-- From: file:/E:/SmartCity/client/Grid_Management_as/app/src/main/res/layout/callsms_dialog_layout.xml -->