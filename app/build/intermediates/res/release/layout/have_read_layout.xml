<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/have_head"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_margin="@dimen/ten_dip"
                android:src="@drawable/default_header" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/have_department"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/ten_dip"
                android:gravity="left|center" />

            <TextView
                android:id="@+id/have_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/ten_dip"
                android:gravity="left|center"
                android:textColor="@color/mark_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/have_time"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/ten_dip"
            android:gravity="center|right"
            android:textColor="@color/mark_text" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/SmartCity/client/Grid_Management_as/app/src/main/res/layout/have_read_layout.xml -->