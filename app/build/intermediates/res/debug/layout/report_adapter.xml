<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="top" >

        <TextView
            android:id="@+id/top_line"
            android:layout_width="1dip"
            android:layout_height="@dimen/twenty_dip"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@color/line_color" />

        <ImageView
            android:id="@+id/report_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_line"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/report_one" />

        <TextView
            android:id="@+id/bottom_line"
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_below="@+id/report_position"
            android:layout_centerHorizontal="true"
            android:background="@color/line_color" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/report_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dip"
            android:layout_marginTop="@dimen/ten_dip"
            android:text="督办"
            android:textColor="@color/content_title"
            android:textSize="@dimen/title_size" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/report_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/ten_dip"
                android:text="李元华-行政部"
                android:textColor="@color/mark_text"
                android:textSize="@dimen/mark_size" />

            <TextView
                android:id="@+id/report_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/ten_dip"
                android:drawableLeft="@drawable/time"
                android:gravity="center"
                android:text="2015-01-27 09:37"
                android:textColor="@color/mark_text"
                android:textSize="@dimen/mark_size" />
        </RelativeLayout>

        <TextView
            android:id="@+id/report_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dip"
            android:layout_marginRight="@dimen/ten_dip"
            android:lineSpacingMultiplier="1.3"
            android:maxLines="55"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:text="大河报 【深圳一女子因不化妆遭男友嫌弃 当街分手】据网友爆料,昨日下午,在深圳世界之窗地铁站内,一对情侣当众争吵,起因竟因男友嫌女友不化妆会丢他... "
            android:textColor="@color/content_text"
            android:textSize="@dimen/content_size" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="@dimen/five_dip"
            android:background="@color/line_color" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/carpool/projects/Grid_Management_as/app/src/main/res/layout/report_adapter.xml -->