<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:background="@color/title_color" >

        <TextView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/five_dip"
            android:background="@drawable/btn_back"
            android:gravity="center" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="描述选择"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_size" />
    </RelativeLayout>
	<LinearLayout
        android:id="@+id/submit_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#fcfcfc"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fcfcfc"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/five_dip"
                android:layout_marginLeft="@dimen/ten_dip"
                android:layout_marginRight="@dimen/five_dip"
                android:layout_marginTop="@dimen/five_dip"
                android:layout_weight="3"
                android:background="@drawable/submit"
                android:gravity="center|left" >

                <EditText
                    android:id="@+id/edit_submit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five_dip"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="输入你的备注" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/notice_submit"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/five_dip"
                android:layout_marginLeft="@dimen/five_dip"
                android:layout_marginRight="@dimen/ten_dip"
                android:layout_marginTop="@dimen/five_dip"
                android:layout_weight="1"
                android:background="@drawable/submit"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认"
                    android:textColor="@color/mark_text"
                    android:textSize="@dimen/content_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dip"
        android:text="最近记录"
        android:textColor="@color/mark_text"
        android:textSize="@dimen/title_size" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.1dip"
        android:background="@color/line_color" />

    <ListView
        android:id="@+id/history_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:divider="@null" />

</LinearLayout><!-- From: file:/E:/carpool/projects/Grid_Management_as/app/src/main/res/layout/activity_history_list.xml -->