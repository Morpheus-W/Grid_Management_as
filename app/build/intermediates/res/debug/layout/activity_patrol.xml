<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/patrol_background"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/title_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/five_dip"
                android:background="@drawable/btn_back"
                android:gravity="center" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/mywalk"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/add_patrol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/five_dip"
                android:background="@drawable/btn_add"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/twenty_five_dip"
            android:layout_weight="1.2"
            android:gravity="bottom" >

            <TextView
                android:id="@+id/myRoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/five_dip"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="55sp" />

            <TextView
                android:id="@+id/kilometre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/five_dip"
                android:layout_toRightOf="@+id/myRoad"
                android:text="公里"
                android:textColor="@color/white"
                android:textSize="@dimen/login_button_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|bottom"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/myWayCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/login_button_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five_dip"
                            android:text="次"
                            android:textColor="@color/white"
                            android:textSize="@dimen/content_size" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:text="@string/walktimes"
                        android:textColor="@color/white"
                        android:textSize="@dimen/content_size" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/twenty_dip"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|bottom"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/myWayAvgTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/login_button_size" />

                        <TextView
                            android:id="@+id/min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five_dip"
                            android:text="min"
                            android:textColor="@color/white"
                            android:textSize="@dimen/content_size" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:text="平均耗时"
                        android:textColor="@color/white"
                        android:textSize="@dimen/content_size" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/twenty_dip"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|bottom"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/myWayAvgLong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/login_button_size" />

                        <TextView
                            android:id="@+id/km1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five_dip"
                            android:text="km"
                            android:textColor="@color/white"
                            android:textSize="@dimen/content_size" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:text="平均长度"
                        android:textColor="@color/white"
                        android:textSize="@dimen/content_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|bottom"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/myEventCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/login_button_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five_dip"
                            android:text="次"
                            android:textColor="@color/white"
                            android:textSize="@dimen/content_size" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                       android:gravity="center|top"
                        android:text="上报次数"
                        android:textColor="@color/white"
                        android:textSize="@dimen/content_size" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/twenty_dip"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|bottom"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/myWalkingRoad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/login_button_size" />

                        <TextView
                            android:id="@+id/km2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five_dip"
                            android:text="km"
                            android:textColor="@color/white"
                            android:textSize="@dimen/content_size" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:text="步行轨迹"
                        android:textColor="@color/white"
                        android:textSize="@dimen/content_size" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/twenty_dip"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|bottom"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/myDrivingRoad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/login_button_size" />

                        <TextView
                            android:id="@+id/km3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five_dip"
                            android:text="km"
                            android:textColor="@color/white"
                            android:textSize="@dimen/content_size" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:text="驾车轨迹"
                        android:textColor="@color/white"
                        android:textSize="@dimen/content_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <ListView
            android:id="@+id/patrol_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@null"
            android:scrollbars="none" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/carpool/projects/Grid_Management_as/app/src/main/res/layout/activity_patrol.xml -->